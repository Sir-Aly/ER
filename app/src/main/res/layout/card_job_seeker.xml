<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="7dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="677dp"
                android:orientation="vertical"
                android:background="@drawable/cards_bg"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/photoImageView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ali"
                    android:backgroundTint="@color/white"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:orientation="vertical"
                    android:background="@drawable/straight_white_bg"
                    android:paddingTop="10dp"

                    android:paddingBottom="10dp"
>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="7dp"
                        >

                        <TextView
                            android:id="@+id/nameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24sp"
                            android:text="Seeker Name"
                            android:textColor="@color/black"
                            android:fontFamily="@font/roboto_mono_medium"
                            android:textStyle="bold"
                            android:padding="6dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="7dp"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/skillsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:text="Seeker Skills: "
                            android:fontFamily="@font/helevaic"
                            android:textSize="24sp"
                            android:padding="6dp" />

                        <TextView
                            android:id="@+id/skillsTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Seeker Skills"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:fontFamily="@font/roboto_mono_medium"
                            android:textColor="@color/black"
                            android:textAlignment="textEnd"
                            android:textSize="24sp"
                            android:padding="6dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="7dp"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/locationText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:text="Location:"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:fontFamily="@font/helevaic"
                            android:padding="6dp" />

                        <TextView
                            android:id="@+id/locationTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:text="Seeker Location"
                            android:fontFamily="@font/roboto_mono_medium"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:padding="6dp" />
                    </LinearLayout>                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="7dp">

                    <TextView
                        android:id="@+id/emailText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:text="Seeker Email:"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/helevaic"
                        android:padding="6dp" />

                    <TextView
                        android:id="@+id/emailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Seeker Email"
                        android:textAlignment="textEnd"
                        android:fontFamily="@font/roboto_mono_medium"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:padding="6dp" />
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"

                        >
                        <ImageButton
                            android:id="@+id/add_to_int"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#00DDF8FE"
                            android:src="@drawable/bookmark"

                            />


                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/ImageUrlTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/IDTEXT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/JobID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:padding="16dp"
                    android:visibility="gone"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>