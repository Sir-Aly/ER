<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choose_between_2options">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_without_logo"
        >

        <ImageView
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:src="@drawable/logo_transparent"
            android:layout_gravity="center"
            app:tint="@color/black"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/ChooseTitle"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold"
            android:textColor="@color/black"

            />

            <androidx.cardview.widget.CardView
                android:onClick="href_to_job_seeker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                android:layout_marginTop="10dp"
                >


                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:paddingBottom="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/employees_small_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JOB SEEKER"
                    android:layout_marginTop="60dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:fontFamily="@font/raleway_bold"
                    android:textSize="30dp"
                    android:shadowRadius="10"
                    android:shadowColor="@color/black"
                    android:textColor="@color/white"
                    />









            </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:onClick="href_to_job_offerer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_marginTop="30dp"
            >

        <ImageView
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:src="@drawable/manager_small_size"
            android:scaleType="centerCrop"
            />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOB OFFERER"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:fontFamily="@font/raleway_bold"
                android:textSize="30dp"
                android:shadowRadius="10"
                android:shadowColor="@color/black"
                android:textColor="@color/white"
                />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_info"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            />

            <TextView
                android:onClick="href_to_about_us"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact US?"
                android:textColor="@color/blue_200"
                android:textAlignment="center"
                android:textSize="20dp"
                />











    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>